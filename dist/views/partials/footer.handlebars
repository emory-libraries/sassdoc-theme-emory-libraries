{{#or package.name display.watermark}}

  <footer class="footer" role="contentinfo">
    
    <div class="container">
      
      {{#if package.name}}
      
        <div class="footer__project-info  project-info">
          
          <!-- Name and URL -->
          <a class="project-info__name" href="{{default package.homepage (combine '//github.com/emory-libraries/' package.name)}}">
              {{#if package.title}}
                {{titleize package.title}}
              {{else}}
                {{titleize package.name}}
              {{/if}}
          </a>

          <!-- Version -->
          {{#if package.version}}<span class="project-info__version"> - v{{package.version}}</span>{{/if}}

          <!-- License -->
          {{#if package.license}}
            <span class="project-info__license">, under
              {{#if package.license.type}}
                {{#if package.license.url}}
                  <a href="{{package.license.url}}">{{package.license.type}}</a>
                {{else}}
                  {{package.license.type}}
                {{/if}}
              {{else}}
                {{package.license}}
              {{/if}}
            </span>
          {{/if}}
          
        </div>
      
      {{/if}}

      {{#if display.watermark}}
        <a class="footer__watermark" href="{{default package.homepage (combine '//github.com/emory-libraries/' package.name)}}">
          {{> watermark}}
        </a>
      {{/if}}
      
    </div>
    
  </footer>

{{/or}}