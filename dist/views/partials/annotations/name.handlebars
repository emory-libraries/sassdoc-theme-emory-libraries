<h3 class="item__heading">
  
  {{#and access (not access "public")}} 
    <span class="item__access">[{{access}}]</span>
  {{/and}}

  <a class="item__name" href="#{{group}}-{{type}}-{{context.name}}">
    {{context.name}}
  </a>

  {{#and @root.display.alias (gt aliased.length 0)}}
    <span class="item__aliased">
      (aliased as
      {{#each aliased}}
        <a href="#{{group}}-{{type}}-{{.}}"><code>{{.}}</code></a>
      {{/each}}
      )
    </span>
  {{/and}}

  {{#if alias}}
    <span class="item__alias">
      (alias for 
      <a href="#{{group}}-{{type}}-{{alias}}"><code>{{alias}}</code></a>
      )
    </span>
  {{/if}}
  
  {{#if status}}
    <span class="item__status item__status--{{status}}">{{status}}</span>
  {{/if}}
  
</h3>

{{#eq since.length 1}}

  <span class="item__since">
    Since {{since.0.version}}{{#if since.0.description}} &mdash; {{since.0.description}}{{/if}}
  </span>

{{/eq}}