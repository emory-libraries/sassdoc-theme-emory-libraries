{{#if item.require}}

  <h3 class="item__sub-heading">Requires</h3>

  <ul class="list-unstyled">

    {{#each item.require}}

      {{#if external}}

        <li class="item__description item__description--inline">

          <span class="item__cross-type">external</span>

          {{#if url}}
            <a href="{{url}}"><code>{{name}}</code></a> {{description}}
          {{else}}
            <code>{{name}}</code>
          {{/if}}

          {{#if description}}
            &mdash; {{description}}
          {{/if}}

        </li>

      {{else}}
  
        {{set 'srcData' (lookup (where (where @root._data.byPatternSrc 'name' item.context.name) 'type' item.context.type) 0) item.context}}

        <li class="item__description  item__description--inline">

          <span class="item__cross-type">{{item.context.type}}</span>

          <a href="#{{item.context.srcData.src.[0]}}"><code>{{item.context.name}}</code></a>

          {{#if description}}
            &mdash; {{description}}
          {{/if}}

        </li>

      {{/if}}

    {{/each}}

  </ul>

{{/if}}