{{#if item.return}}

  <h3 class="item__sub-heading">Returns</h3>

  <div class="item__description item__description--inline">
    
    {{#is item.return.type '*'}}
      Any type
    {{else}}
      <code>{{join (map (split item.return.typ '|') trim) '</code> or <code>'}}</code>
    {{/is}}
    
    {{#if item.return.description}} &mdash; {{{item.return.description}}}{{/if}}
    
  </div>

{{/if}}